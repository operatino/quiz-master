#!/usr/bin/env node

var lib = require('../')
var color = require('cli-color')
var argv = require('yargs')
  .usage('Compile Less files into CSS. \nUsage: $0 [folder]')
  .example('$0 less/', 'compile all files in the less directory (recursively)')
  .demand(1)
  .argv

lib(argv._[0], function (err, files) {
  if (err) {
    console.error(err)
    process.exit(1)
  }
  console.log(files)
  console.log(color.green('âœ“') + ' successfully compiled ' + files.length + ' less files')
  process.exit(0)
})
